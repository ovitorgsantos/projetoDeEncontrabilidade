<%- include('inc/header') -%>
    <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Tela Inicial
        </h1>
        <ol class="breadcrumb">
          <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
          <li class="active">Usuários</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content container-fluid">

        <div class="row">
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box" onclick="window.location.href = '/admin/banners'" style="cursor:pointer">
              <span class="info-box-icon bg-aqua">
                <i class="fa fa-photo"></i>
              </span>

              <div class="info-box-content">
                <span class="info-box-text">Banners</span>
                <span class="info-box-number"><%= data.nrbanners %></span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box" onclick="window.location.href = '/admin/noticias'" style="cursor:pointer">
              <span class="info-box-icon bg-red">
                <i class="fa fa-newspaper-o"></i>
              </span>

              <div class="info-box-content">
                <span class="info-box-text">Notícias</span>
                <span class="info-box-number"><%= data.nrnews %></span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->

          <!-- fix for small devices only -->
          <div class="clearfix visible-sm-block"></div>

          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box" onclick="window.location.href = '/admin/emails'" style="cursor:pointer">
              <span class="info-box-icon bg-green">
                <i class="fa fa-envelope-o"></i>
              </span>

              <div class="info-box-content">
                <span class="info-box-text">E-mails</span>
                <span class="info-box-number"><%= data.nrcontacts %></span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box" onclick="window.location.href = '/admin/usuarios'" style="cursor:pointer">
              <span class="info-box-icon bg-yellow">
                <i class="ion ion-ios-people-outline"></i>
              </span>

              <div class="info-box-content">
                <span class="info-box-text">Usuários</span>
                <span class="info-box-number"><%= data.nrusers %></span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
        </div>

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
<%- include('inc/footer') %>